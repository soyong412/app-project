<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/skyyy"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="54dp">


            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/gifgommmm"></ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:orientation="horizontal"/>


            </LinearLayout>
            <Button
                android:id="@+id/button1"
                android:layout_width="220dp"
                android:layout_height="107dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ccm"
                android:fontFamily="@font/maple"
                android:text="CAMERA"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:textColor="@color/blue3"
                android:textSize="26dp"></Button>

            <Button
                android:id="@+id/button2"
                android:layout_width="220dp"
                android:layout_height="107dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ctemp"
                android:fontFamily="@font/maple"
                android:text="TEMP"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:textColor="@color/blue3"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/button3"
                android:layout_width="220dp"
                android:layout_height="107dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/cmusic"
                android:fontFamily="@font/maple"
                android:text="MUSIC"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:textColor="@color/blue3"
                android:textSize="27dp"></Button>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

